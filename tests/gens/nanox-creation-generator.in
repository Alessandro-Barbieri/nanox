#!/bin/bash

cat <<EOF
SRC=@SRCDIR@/src
BUILD=@BUILDDIR@/src
PLUGINS=@PLUGINSDIRS@

common_includes="-I\$SRC/core -I\$SRC/apis/c"

common_includes+=" 
        -I\$SRC/arch/unix-os \
        -I\$SRC/support \
        -I\$SRC/core \
        -I\$SRC/arch/smp \
        -I\$SRC/arch/spu"

common_cflags="-Wall"

test_CFLAGS="\$common_includes \$common_cflags"
test_CXXFLAGS="\$common_includes \$common_cflags"

test_LDFLAGS="\$BUILD/core/@USEDVERSION@/.libs/libnanox.so \$BUILD/apis/c/@USEDVERSION@/.libs/libnanox-c.so"
test_ENV="LD_LIBRARY_PATH=\$BUILD/core/@USEDVERSION@/.libs:\$BUILD/apis/c/@USEDVERSION@/.libs/:\$PLUGINS:$LD_LIBRARY_PATH"
EOF

