#!/bin/bash

cat <<EOF
SRC=@SRCDIR@/src
BUILD=@BUILDDIR@/src
PLUGINS=@PLUGINSDIRS@

common_includes=" 
        -I\$SRC/arch/unix-os \
        -I\$SRC/support \
        -I\$SRC/core \
        -I\$SRC/arch/smp \
        -I\$SRC/arch/spu"

common_cflags="-Wall -Werror"

test_CFLAGS="\$common_includes \$common_cflags"
test_CXXFLAGS="\$common_includes \$common_cflags"

test_LDFLAGS="\$BUILD/core/@USEDVERSION@/.libs/libnanox.so"
test_ENV="LD_LIBRARY_PATH=\$BUILD/core/@USEDVERSION@/.libs:\$PLUGINS:$LD_LIBRARY_PATH"

`@SRCDIR@/tests/gens/config.py $*`
EOF

